<div class="container-fluid text-center">
  <h1>Workout Tracker</h1>
</div>

<div class="container-fluid table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <th class="hidden">
        ID
      </th>
      <th>
        NAME
      </th>
      <th class="text-center col-xs-2">
        REPS
      </th>
      <th class="text-center col-xs-2">
        WEIGHT
      </th>
      <th>
        DATE
      </th>
      <th>
        LBS/KGS
      </th>
    </thead>
    {{#if results}}
    {{#each results}}
    <tr>
      <td class="hidden">
        {{id}}
      </td>
      <td>
        {{name}}
      </td>
      <td class="text-center col-md-2">
        {{reps}}
      </td>
      <td class="text-center col-md-2">
        {{weight}}
      </td>
      <td>
        {{date}}
      </td>
      <td>
        {{#if lbs}}
        lbs
        {{else}}
        kgs
        {{/if}}
      </td>
      <td>
        <button class="btn btn-default" role="button" type="button" name="button">Edit</button>
        <button class="close" type="button" name="button" aria-label="Close"><span class="text-danger" aria-hidden="true">&times;</span></button>
      </td>
    </tr>
    {{/each}}
    {{/if}}
    <tr>
      <td class="hidden">
      </td>
      <td>
          <input type="text" class="form-control" id="" placeholder="Name">
      </td>
      <td>
        <div class="col-sm-7 col-sm-offset-4">
          <input type="number" class="form-control" id="" placeholder="Reps">
        </div>
      </td>
      <td>
        <div class="col-sm-7 col-sm-offset-4">
          <input type="number" class="form-control" id="" placeholder="Weight">
        </div>
      </td>
      <td>
        <input type="date" class="form-control" id="" placeholder="Weight">
      </td>
      <td>
        <select class="form-control" name="">
          <option value="1">lbs</option>
          <option value="0">kgs</option>
        </select>
      </td>
      <td>
        <button class="btn btn-default" role="button" type="button" name="button">+</button>
        <button class="close" type="button" name="button" aria-label="Close"><span class="text-danger" aria-hidden="true">&times;</span></button>
      </td>
    </tr>
  </table>
</div>
